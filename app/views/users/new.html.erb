<h1>User Registration</h1>  
  
  <%= form_tag users_path, method: :post do %>

    <%= label_tag :name %>
    <%= text_field_tag :name, @user.name %>

    <%= label_tag :address %>
    <%= text_field_tag :address, @user.address %>

    <%= label_tag :city %>
    <%= text_field_tag :city, @user.city %>

    <%= label_tag :state %>
    <%= text_field_tag :state, @user.state %>

    <%= label_tag "zip" %>
    <%= text_field_tag :zip, @user.zip %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :password %>
    <%= text_field_tag :password %>

    <%= label_tag "confirm password" %>
    <%= text_field_tag :password_confirmation %>

    <%= submit_tag 'Create Profile' %>
  <% end %>