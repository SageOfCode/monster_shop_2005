<article>

<%= content_tag :h1, "All user orders" %>

<%= content_tag :h4, "Packaged Orders" %>

<% @orders.each do |order| %>
  <% if order.status == "packaged" %>
  <section id="packaged-<%= order.id %>">
    <%= content_tag :p, "Order id: #{order.id}" %>
    <p>Users Name: <%= link_to "#{order.name}", "/admin/users/:user_id" %></p>
    <%= content_tag :p, "Date Created: #{order.created_at}" %>
    <%= button_to "Ship", "/admin/#{order.id}", method: :patch %>
  </section>
    <% end %>
<% end %>

<%= content_tag :h4, "Pending Orders" %>

<% @orders.each do |order| %>
  <% if order.status == "pending" %>
  <section id="pending-<%= order.id %>">
