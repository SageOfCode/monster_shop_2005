    <%= content_tag :p, "Date Created: #{order.created_at}" %>
  </section>
<% end %>
<% end %>

<%= content_tag :h4, "Cancelled Orders" %>

<% @orders.each do |order| %>
  <% if order.status == "cancelled" %>
  <section id="cancelled-<%= order.id %>">
    <%= content_tag :p, "Order id: #{order.id}" %>
    <p>Users Name: <%= link_to "#{order.name}", "/admin/users/:user_id" %></p>
    <%= content_tag :p, "Date Created: #{order.created_at}" %>
  </section>
<% end %>
<% end %>
</article>
